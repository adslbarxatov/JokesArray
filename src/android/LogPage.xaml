<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.LogPage">

	<StackLayout Orientation="Vertical">

		<Grid ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="60" />
				<ColumnDefinition />
				<ColumnDefinition Width="60" />
			</Grid.ColumnDefinitions>

			<Label x:Name="Header" Grid.Column="1" VerticalOptions="Center" />
			<Button x:Name="Share" Grid.Column="2" HorizontalOptions="End" />
		</Grid>

		<ScrollView x:Name="TextScroll">
			<StackLayout Orientation="Vertical" VerticalOptions="Center">
				<Label x:Name="Text" />
				<Label x:Name="Sign" />
			</StackLayout>
		</ScrollView>

		<Grid ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75" />
				<ColumnDefinition Width="60" />
				<ColumnDefinition />
				<ColumnDefinition Width="60" />
				<ColumnDefinition Width="75" />
			</Grid.ColumnDefinitions>

			<!-- Принудительная фокусировка на центральной кнопке -->
			<Button x:Name="CenterButton" VerticalOptions="Center" HorizontalOptions="Fill" Grid.Column="2" />

			<Button x:Name="SameCatButton" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" />
			<Button x:Name="PrevEntryButton" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" />
			<Button x:Name="NextEntryButton" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="3" />
			<Button x:Name="MenuButton" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="4" />
		</Grid>

	</StackLayout>
</ContentPage>
    